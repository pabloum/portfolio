
@using Portfolio.Core

@model List<Experience>


    <div class="experience">

        <h2>Experience</h2>

        <a class="btn btn-primary" asp-page="/CreateUpdate/EditExperience">Add</a>

        @foreach (var job in Model)
        {
            <div class="card">
                <div class="card-header">
                    
                    <div class="container d-flex h-100">
                        <div class="row justify-content-center align-self-center">
                            <h4>@job.Company</h4>
                        </div>
                        <div class="ml-auto">
                            <a class="btn btn-lg"
                               asp-page="Experience/Detail"
                               asp-route-experienceId="@job.Id">
                                &#128270;
                            </a>
                            <a class="btn btn-lg"
                               asp-page="Experience/Edit"
                               asp-route-experienceId="@job.Id">
                                &#x270D;
                            </a>
                            <a class="btn btn-lg"
                               asp-page="Experience/Delete"
                               asp-route-experienceId="@job.Id">
                                &#128465;
                            </a>
                        </div>
                    </div>

                </div>

                <div class="card-body">
                    <table class="table">
                        <tr>
                            <th>Position</th>
                            <td>@job.Position</td>
                        </tr>
                        <tr>
                            <th>Main Functions</th>
                            <td>@job.MainFunctions</td>
                        </tr>
                    </table>
                </div>
                <div class="card-footer">
                    <small>TO-DO Dates</small>
                </div>

            </div> 
            <br />
            <br />
        }

    </div>
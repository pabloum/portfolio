
@using Portfolio.Core

@model List<Experience>


    <div class="experience">

        <h2>Experience</h2>

        <a class="btn btn-primary" asp-page="/CreateUpdate/EditExperience">Add</a>

        @foreach (var job in Model)
        {
            <div class="card">
                <div class="card-header">
                    <h4>@job.Company</h4>
                </div>

                <div class="card-body">
                    <table class="table">
                        <tr>
                            <th>Position</th>
                            <td>@job.Position</td>
                        </tr>
                        <tr>
                            <th>Main Functions</th>
                            <td>@job.MainFunctions</td>
                        </tr>
                    </table>
                </div>
                <div class="card-footer">
                    <small>TO-DO Dates</small>
                </div>

            </div> 
            <br />
            <br />
        }

    </div>
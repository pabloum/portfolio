@using Portfolio.Core

@model List<Education>

    <div class="education">

        <h2>Education</h2>

        <a class="btn btn-primary" asp-page="/Education/Edit">Add</a>

        <div class="container">
            @foreach (var study in Model)
            {
                <div class="row justify-content-center align-self-center">
                    <div class="col">
                        <div>
                            @study.Title
                        </div>

                        <small>
                            @study.DateBegining - @study.DateEnd
                        </small>

                        <div>
                            @study.University
                        </div>
                    </div>
                    <div class="col">
                        <div class="float-right">
                            <a class="btn btn-lg"
                               asp-page="Education/Detail"
                               asp-route-educationId="@study.Id">
                                &#128270;
                            </a>
                            <a class="btn btn-lg"
                               asp-page="Education/Edit"
                               asp-route-educationId="@study.Id">
                                &#x270D;
                            </a>
                            <a class="btn btn-lg"
                               asp-page="Education/Delete"
                               asp-route-educationId="@study.Id">
                                &#128465;
                            </a>
                        </div>
                    </div>
                </div>
                <hr />
                <br />
            }
        </div>

        
    </div>


@using Portfolio.Core

@model List<Skill>

    <div id="skills">
        @{string @title = "Skills"; }
        <partial name="_SectionTitle" model="title" />

        @foreach (var skill in Model)
        {
            <div class="row justify-content-center align-self-center">
                <div class="col">
                    <p>
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped" role="progressbar" style="width: @skill.Percentage%" aria-valuenow="@skill.Percentage" aria-valuemin="0" aria-valuemax="100">@skill.Name - Estimated autonomy: @skill.Percentage%</div>
                        </div>
                    </p>
                    <p>
                        Category: @skill.Category
                    </p>
                </div>
                <div class="col">
                    <span><a asp-page="Skills/Delete" asp-route-skillId="@skill.Id" class="btn btn-danger float-right">&#128465;</a></span>
                </div>
            </div>
            
            <hr />
        }

    </div>